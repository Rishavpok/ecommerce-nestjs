generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Cart      Cart[]
  Order     Order[]

  @@map("users")
}

// Enum for user roles
enum Role {
  USER
  ADMIN
}

// product  schema

model Product {
  id          Int         @id @default(autoincrement())
  name        String
  description String
  price       Int
  stock       Int
  image       String // store image URL
  categoryId  Int
  category    Category    @relation(fields: [categoryId], references: [id])
  Cart        Cart[]
  OrderItem   OrderItem[]
}

// category
model Category {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  Product     Product[]
}

// cart schema

model Cart {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  productId Int
  product   Product  @relation(fields: [productId], references: [id])
  quantity  Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// order schema

model Order {
  id         Int         @id @default(autoincrement())
  userId     Int
  user       User        @relation(fields: [userId], references: [id])
  total      Float
  status     String      @default("pending") // pending, paid, shipped, delivered
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  orderItems OrderItem[]
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  orderId   Int
  order     Order   @relation(fields: [orderId], references: [id])
  productId Int
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Float
}
